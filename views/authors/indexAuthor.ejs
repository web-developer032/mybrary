<h2 class="page-header">Search Author</h2>
<form action="/authors" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        value="<%= searchOptions.name %>"
      />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary">Search</button>
  </div>
</form>

<br />
<% authors.forEach(author => { %>
<div class="author-row">
  <div class="author-name"><%= author.name %></div>
  <div class="btn-row">
    <a href="/authors/<%= author.id %>" class="btn btn-primary">View</a>
    <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
    <%- include("../partials/deleteForm",{url:`/authors/${ author.id }`}) %>
    <%}) %>
  </div>
</div>
